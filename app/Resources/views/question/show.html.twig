{% extends '@App/Default/layout.html.twig' %}

{% block title %}
{{ parent() }} - question
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View question <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ question.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Lang</strong></p>
        <p>
            {{ question.lang }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Question</strong></p>
        <p>
            {{ question.question }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prop1</strong></p>
        <p>
            {{ question.prop1 }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prop2</strong></p>
        <p>
            {{ question.prop2 }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Isproponecorrect</strong></p>
        <p>
            {% if question.isPropOneCorrect %}Yes{% else %}No{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Pointtoadd</strong></p>
        <p>
            {{ question.pointToAdd }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Pointtosubiffail</strong></p>
        <p>
            {{ question.pointToSubIfFail }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('question') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('question_edit', { 'id':  question.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('question_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('question_delete', { 'id': question.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

