{% extends '@App/Default/layout.html.twig' %}

{% block title %}
{{ parent() }} - service
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View service <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ service.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Libelle</strong></p>
        <p>
            {{ service.libelle }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Keyword</strong></p>
        <p>
            {{ service.keyword }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Description</strong></p>
        <p>
            {{ service.description }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Isactive</strong></p>
        <p>
            {% if service.isActive %}Yes{% else %}No{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Datecreation</strong></p>
        <p>
            {% if service.dateCreation %}{{ service.dateCreation|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Datedebut</strong></p>
        <p>
            {% if service.dateDebut %}{{ service.dateDebut|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Datefin</strong></p>
        <p>
            {% if service.dateFin %}{{ service.dateFin|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Price</strong></p>
        <p>
            {{ service.price }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('service') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('service_edit', { 'id':  service.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('service_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('service_delete', { 'id': service.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

