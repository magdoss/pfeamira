{% extends '@App/Default/layout.html.twig' %}

{% block title %}
{{ parent() }} - emmision index
{% endblock %}

{% block body %}


<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2><a href="{{ path('emmision') }}">Emmision</a></h2>
        </div>
    </div>    
<div class="col-md-3 pull-left">
        
    <!-- PAGE SIZE -->
    <div class="pagination form-inline ">
        <select class = "form-control"  onchange="window.location = this.value" >
            <option value='{{ path('emmision', app.request.query.all|merge({'pcg_show': '10'})) }}' {% if app.request.get('pcg_show') == 10 %} selected {% endif %}>10</option>
            <option value='{{ path('emmision', app.request.query.all|merge({'pcg_show': '20'})) }}' {% if app.request.get('pcg_show') == 20 %} selected {% endif %}>20</option>
            <option value='{{ path('emmision', app.request.query.all|merge({'pcg_show': '50'})) }}' {% if app.request.get('pcg_show') == 50 %} selected {% endif %}>50</option>
            <option value='{{ path('emmision', app.request.query.all|merge({'pcg_show': '100'})) }}' {% if app.request.get('pcg_show') == 100 %} selected {% endif %}>100</option>
            <option value='{{ path('emmision', app.request.query.all|merge({'pcg_show': '500'})) }}' {% if app.request.get('pcg_show') == 500 %} selected {% endif %}>500</option>
        </select>
    </div>
    <!-- END PAGE SIZE -->

</div>


<!-- FILTERING -->
<div class="col-md-6">
    <form action="{{ path('emmision') }}" method="get" >

        <div class="input-group h3">

            {{form_widget(filterForm.search, { 'attr': {'class': 'form-control'} })}}
            {{form_rest(filterForm) }}

            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            </span>

        </div>
    </form>
</div>
<!-- END FILTERING -->            
            
            

<div class="col-md-3">
            <a class="btn btn-primary h3 pull-right" href="{{ path('emmision_new') }}" style="margin-bottom:10px">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
        </a>
    </div>

    <div class="col-md-12">
        {%- if form_errors(filterForm) %}
        <div class="alert alert-block alert-error fade in form-errors">
            {{ form_errors(filterForm) }}
        </div>
        {% endif %}
    </div>

</div> <!-- /#top -->


<div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

<div class="row">

        <div class="table-responsive col-md-12">
        <form method="POST" id="bulk_form" action="{{ path('emmision_bulk_action') }} ">
            <table class="table table-striped table-hover table-bordered" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th width="20px"><input type="checkbox" class="check-all" onclick="toggleAll(this)"></th>

                {% import "PetkoparaCrudGeneratorBundle::macros/th_sortable.html.twig" as macros %}
                            <th>{{macros.th_sortable('id',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('libelle',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('keyword',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('description',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('isActive',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('dateCreation',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('dateDebut',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('dateFin',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
                            <th>{{macros.th_sortable('price',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'emmision')}}</th>
    
                       
                        <th width = "130px">List</th>
                    </tr>
                </thead>
                <tbody>
                    {% for emmision in emmisions %}
                    <tr>
                        <td><input type="checkbox" name="ids[]" onclick='bulkSubmitBtnManage();' class="check-all" value="{{emmision.id}}"/></td>
                        <td><a href="{{ path('emmision_edit', { 'id': emmision.id }) }}">{{ emmision.id }}</a></td>
                        <td>{{ emmision.libelle }}</td>
                        <td>{{ emmision.keyword }}</td>
                        <td>{{ emmision.description }}</td>
                        <td>{%- if emmision.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>{%- if emmision.dateCreation %}{{ emmision.dateCreation|date('Y-m-d') }}{% endif %}</td>
                        <td>{%- if emmision.dateDebut %}{{ emmision.dateDebut|date('Y-m-d') }}{% endif %}</td>
                        <td>{%- if emmision.dateFin %}{{ emmision.dateFin|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ emmision.price }}</td>
    
                        <td class="actions">
                            <a  onclick="return confirm('Are you sure!');" title="Delete" class="btn btn-danger btn-sm" href="{{ path('emmision_by_id_delete', { 'id': emmision.id}) }}">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                            <a title='Show' class="btn btn-info btn-sm" href="{{ path('emmision_show', { 'id': emmision.id }) }}">
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </a>
                            <a  title='Edit' class="btn btn-primary btn-sm" href="{{ path('emmision_edit', { 'id': emmision.id }) }}">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>


                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>


        </div>
</div> <!-- /#list -->




<div class="row">
    <div class="col-md-4 pull-left">
            <div class="pagination form-inline ">
                <select class = "form-control" name="bulk_action" >
                    <option value="delete">DELETE</option>
                </select>
                <input type="submit" id='bulkSubmitBtn' onclick="return confirm('Are you sure?')" form="bulk_form" class="form-control btn btn-danger btn-sm" disabled>
            </div>
    </div>
    
    <div class='col-md-3 pagination text-center'>
         <p>{{totalOfRecordsString}}</p>
    </div>
 
    <div class="col-md-5 text-right">
         {{ pagerHtml|raw }} 
    </div>
</div> <!-- /#bottom -->



{% endblock %}

